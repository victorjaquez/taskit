<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <% include ../partials/head.ejs %>
    </head>
    <body>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="/"><img src="/img/logo.png" height="60" width="150" ></a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/tasks">Browse Tasks</a>
                        </li>
                        <li>
                            <form action="/sessions?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-primary">Log out</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- Form -->
            <div class="jumbotron jumbotron-special" style="background:#f5f8fa !important">
                <form class="form-group-special" action="/tasks" method="POST">
                    <h2>Create A Task</h2>
                    Description: <input type="text" class="form-control" name="description" />
                    Budget: <input type="text" class="form-control" name="budget" />
                    Location: <input type="text" class="form-control" name="location" />
                    Due Date: <input type="text" class="form-control" name="duedate" />
                    Phone #: <input type="text" class="form-control" name="phonenumber" />
                    <button type="submit" class="btn btn-outline-primary">Submit</button>
                </form>
            </div>
            <!-- Card info -->
            <div class="row">
                <% include ../partials/card.ejs %>
            </div>
        </div>
        <!--Footer -->
        <footer class="footer">
            <% include ../partials/footer.ejs %>
        </footer>
    </body>
</html>
