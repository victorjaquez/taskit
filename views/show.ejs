<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <% include ../partials/head.ejs %>
    </head>
    <body>
        <!--Main Container -->
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand" href="/"><img src="/img/logo.png" height="60" width="150" ></a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/tasks">Browse Tasks</a>
                        </li>
                        <li>
                            <form action="/sessions?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-primary">Log out</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <!-- Card -->
        <div class="container container-special">
            <div class="card card-special">
                <div class="row">
                    <div class="col">
                        <div class="card card-special" style="width: 20rem;text-align:center;display:inline-block;">
                            <h3>Task: <%=task.description; %></h3>
                            <p>Budget: <%=task.budget; %></p>
                            <p>Location: <%=task.location; %></p>
                            <p>Due Date: <%=task.duedate; %></p>
                            <p>Phone Number: <%=task.phonenumber; %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Back to browse tasks -->
        <div class="container">
            <nav>
                <a href="/tasks/" class="btn btn-outline-primary">Back to browse tasks</a>
            </nav>
        </div>
    </body>
</html>
